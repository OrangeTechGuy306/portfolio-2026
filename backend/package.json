{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Secure Node.js backend for portfolio website",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "node src/database/migrations/migrate.js up",
    "db:migrate:status": "node src/database/migrations/migrate.js status",
    "db:migrate:rollback": "node src/database/migrations/migrate.js down",
    "db:migrate:reset": "node src/database/migrations/migrate.js reset",
    "db:create-tables": "node src/database/migrations/001_create_tables.js up",
    "db:drop-tables": "node src/database/migrations/001_create_tables.js down",
    "db:check-tables": "node src/database/migrations/001_create_tables.js status"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "portfolio",
    "api"
  ],
  "author": "Portfolio Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "express-validator": "^7.0.1",
    "express-fileupload": "^1.4.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.7",
    "xss": "^1.0.14",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
